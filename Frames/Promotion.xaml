<local:Frame x:Class="ChessWPF.Promotion" x:Name="PromotionWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             FontFamily="pack://application:,,,/Resources/#CAC Champagne"
             xmlns:local="clr-namespace:ChessWPF" Kind="Promotion"
             Visibility="Collapsed" Opacity="0" Background="#7F000000">
    <Grid>
        <TextBlock TextWrapping="Wrap" Text="Select a promotion" FontSize="72" TextAlignment="Center"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,64,0,0"/>
        <Grid HorizontalAlignment="Center" Height="220" VerticalAlignment="Center" Width="220" Margin="0,80,0,0">
            <local:FakePiece x:Name="Queen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="96" Height="96"/>
            <local:FakePiece x:Name="Rook" HorizontalAlignment="Right" VerticalAlignment="Top" Width="96" Height="96"/>
            <local:FakePiece x:Name="Bishop" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="96" Height="96"/>
            <local:FakePiece x:Name="Knight" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="96" Height="96"/>
        </Grid>
    </Grid>
</local:Frame>
