<local:Frame x:Class="ChessWPF.PlayFrame" x:Name="PlayFrameWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ChessWPF" Height="587" Kind="PlayFrame"
             Visibility="Collapsed" Opacity="0">
    <Grid>
        <local:ChessBoard x:Name="ChessBoard" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        <local:PlayMenu x:Name="PlayMenu" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
        <local:ReplayMenu x:Name="ReplayMenu" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Visibility="Collapsed"/>
        <local:Promotion x:Name="Promotion" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <local:Win x:Name="Win" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</local:Frame>
