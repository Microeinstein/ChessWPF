                <Run Text="        Left &#x9;Backward replay"/><LineBreak/>
                <Run Text="        Esc&#x9;&#x9;Back to previous frame or cancel"/><LineBreak/>
            </TextBlock>
        </ScrollViewer>
    </Grid>
</local:Frame>
