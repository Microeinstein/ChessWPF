        <TextBlock TextWrapping="Wrap" TextAlignment="Left"
			Text="Info" FontSize="64" FontFamily="pack://application:,,,/Resources/#CAC Champagne"
			VerticalAlignment="Top" Margin="25,25,0,0"/>
