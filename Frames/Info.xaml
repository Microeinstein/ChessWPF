                      ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TextBlock TextAlignment="Left" FontSize="14" FontStyle="Italic" TextOptions.TextFormattingMode="Display">
                <Run Text="Developer: Microeinstein"/><LineBreak/>
                <LineBreak/>
                <Run Text="Graphics interface:"/>
                    <Hyperlink NavigateUri="https://github.com/ButchersBoy/MaterialDesignInXamlToolkit"
                               RequestNavigate="Hyperlink_RequestNavigate">
                        <Run Text="Material Design In XAML Toolkit"/>
                    </Hyperlink><LineBreak/>
                <LineBreak/>
                <Run Text="Main icon: Fugue (checkerboard.ico) ~"/>
                    <Hyperlink NavigateUri="http://p.yusukekamiyamane.com/"
                               RequestNavigate="Hyperlink_RequestNavigate">
                        <Run Text="Yusuke Kamiyamane"/>
                    </Hyperlink><LineBreak/>
                <LineBreak/>
                <Run Text="Fonts:"/><LineBreak/>
                <Run Text="   - Roboto"/><LineBreak/>
                <Run Text="   - CAC Champagne"/><LineBreak/>
                <Run Text="   - Chess Cases"/><LineBreak/>
                <LineBreak/>
                <Run Text="Supporters:"/><LineBreak/>
                <Run Text="   - Valentino"/><LineBreak/>
                <Run Text="   - John"/><LineBreak/>
                <Run Text="   - Piubelli"/><LineBreak/>
                <Run Text="   - All people in"/>
                <Hyperlink NavigateUri="ts3server://ts3.voicehosting.it:14211"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    <Run Text="this"/>
                </Hyperlink>
                <Run Text="TeamSpeak server"/>
                <LineBreak/>
                <Run Text="&#x9;and all others..."/><LineBreak/>
                <LineBreak/>
                <Run Text="Controls:"/><LineBreak/>
                <Run Text="        D&#x9;&#x9;Debug window (local only)"/><LineBreak/>
                <Run Text="        CTRL Z&#x9;Undo last move"/><LineBreak/>
                <Run Text="        CTRL Y&#x9;Redo last move"/><LineBreak/>
